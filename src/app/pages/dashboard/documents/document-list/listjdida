          >
        </div>

        <!-- Type Filter -->
        <select 
          [(ngModel)]="selectedType"
          (change)="applyFilters()"
          class="p-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-teal-500 focus:border-teal-500"
        >
          <option value="">Tous les types</option>
          <option *ngFor="let type of availableTypes" [value]="type">{{ type }}</option>
        </select>

        <!-- Matière Filter -->
        <select 
          [(ngModel)]="selectedMatiere"
          (change)="applyFilters()"
          class="p-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-teal-500 focus:border-teal-500"
        >
          <option value="">Toutes les matières</option>
          <option *ngFor="let matiere of availableMatieres" [value]="matiere">{{ matiere }}</option>
        </select>
      </div>

      <!-- Tag Filters -->
      <div class="flex flex-wrap gap-2 items-center">
        <span class="text-sm text-gray-600">Filtrer par tags :</span>
        <ng-container *ngFor="let tag of availableTags">
          <button 
            (click)="toggleTagFilter(tag)"
            [class.bg-teal-600]="selectedTags.includes(tag)"
            [class.text-white]="selectedTags.includes(tag)"
            class="px-3 py-1 text-xs rounded-full border border-teal-600 text-teal-600 hover:bg-teal-50 transition"
          >
            {{ tag }}
          </button>
        </ng-container>
      </div>
    </div>

    <!-- Documents List (unchanged but uses filteredDocuments instead) -->
    <div class="space-y-4">
      <div *ngFor="let doc of filteredDocuments" class="border border-gray-200 rounded-xl p-5 hover:shadow-md transition duration-300">
        <div *ngFor="let doc of documents" class="border border-gray-200 rounded-xl p-5 hover:shadow-md transition duration-300">
            <div class="flex flex-col md:flex-row md:items-center gap-4">
              <!-- Document Icon -->
              <div class="flex-shrink-0">
                <div class="w-12 h-12 rounded-lg bg-teal-50 flex items-center justify-center">
                  <i class="fas fa-file-pdf text-2xl text-red-500"></i>
                </div>
              </div>
    
              <!-- Document Info -->
              <div class="flex-grow">
                <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-2">
                  <h3 class="text-lg font-semibold text-gray-800">{{ doc.filename }}</h3>
                  <span class="text-sm text-gray-500">
                    <i class="fas fa-calendar-alt mr-1"></i>
                    {{ doc.uploadDateTime | date:'mediumDate' }}
                  </span>
                </div>
                
                <p class="text-gray-600 mt-1">{{ doc.description }}</p>
                
                <div class="mt-2 flex flex-wrap gap-2">
                  <span *ngFor="let tag of doc.tags" 
                        class="text-xs px-2 py-1 bg-teal-100 text-gray-700 rounded-full">
                    {{ tag }}
                  </span>
                </div>
                
                <div class="mt-3 text-sm text-gray-500">
                  <i class="fas fa-user mr-1"></i>
                  Ajouté par {{ doc.uploadedBy.firstName }} {{ doc.uploadedBy.lastName }}
                </div>
              </div>
    
              <!-- Actions -->
              <div class="flex-shrink-0 flex gap-2">
                  <button (click)="downloadDocument(doc.id)" 
                          class="p-2 bg-teal-600 text-white rounded-lg hover:bg-teal-700 transition duration-200">
                    <i class="fas fa-download"></i>
                  </button>
                  <button *ngIf="isOwner(doc)" 
                          (click)="confirmDelete(doc.id)"
                          class="p-2 bg-red-100 text-red-600 rounded-lg hover:bg-red-200 transition duration-200">
                    <i class="fas fa-trash-alt"></i>
                  </button>
                </div>
            </div>
      </div>
      <!-- Empty State -->
      <div *ngIf="filteredDocuments.length === 0" class="text-center py-10">
